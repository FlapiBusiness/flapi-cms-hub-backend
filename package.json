{
  "name": "flapi-starterkit-backend",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "node bin/server.js",
    "build": "node ace build",
    "dev": "node ace serve --hmr",
    "dev:docker": "docker-compose up",
    "test:develop": "node ace test --watch",
    "test:staging-prod": "node ace test",
    "db:migration:develop": "node ace migration:run",
    "db:migration:staging-prod": "node ace migration:run --force",
    "db:seed": "node ace db:seed",
    "db:truncate": "node ace db:truncate",
    "db:wipe": "node ace db:wipe",
    "db:fresh": "node ace migration:fresh --seed",
    "swagger:generate": "node ace swagger:docs:generate",
    "lint": "npm run lint:prettier && npm run lint:eslint && npm run lint:ts",
    "lint:prettier": "prettier --check .",
    "lint:ts": "tsc --noEmit",
    "lint:eslint": "eslint .",
    "lint:fix": "prettier --write --list-different . && npm run lint:prettier --fix && npm run lint:eslint --fix",
    "postbuild": "npm run swagger:generate && cp -a swagger.yml build/",
    "prepare": "husky"
  },
  "dependencies": {
    "@adonisjs/auth": "^9.2.4",
    "@adonisjs/core": "^6.16.0",
    "@adonisjs/cors": "^2.2.1",
    "@adonisjs/lucid": "^21.5.1",
    "@adonisjs/mail": "^9.2.2",
    "@aws-sdk/client-route-53": "^3.712.0",
    "@aws-sdk/client-route-53-domains": "^3.712.0",
    "@vinejs/vine": "^3.0.0",
    "adonis-autoswagger": "^3.64.0",
    "axios": "^1.7.9",
    "edge.js": "^6.2.0",
    "luxon": "^3.5.0",
    "mjml": "^4.15.3",
    "mysql2": "^3.11.5",
    "node-mailjet": "^6.0.6",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.8.2",
    "@adonisjs/tsconfig": "^1.4.0",
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@japa/api-client": "^2.0.4",
    "@japa/assert": "^3.0.0",
    "@japa/plugin-adonisjs": "^3.0.1",
    "@japa/runner": "^3.1.4",
    "@stylistic/eslint-plugin": "^2.12.1",
    "@swc/core": "^1.10.1",
    "@types/luxon": "^3.4.2",
    "@types/mjml": "^4.7.4",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsdoc": "^50.6.1",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "hot-hook": "^0.4.0",
    "husky": "^9.1.7",
    "npm-check-updates": "^17.1.11",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.4.2",
    "ts-node-maintained": "^10.9.4",
    "typescript": "~5.5.0"
  },
  "hotHook": {
    "boundaries": [
      "./app/controllers/**/*.ts",
      "./app/middleware/*.ts"
    ]
  },
  "overrides": {
    "strtok3": "8.0.1"
  },
  "resolutions": {
    "strtok3": "8.0.1"
  },
  "pnpm": {
    "overrides": {
      "strtok3": "8.0.1"
    }
  },
  "engines": {
    "node": ">=22.11.0"
  },
  "imports": {
    "#interfaces/*": " ./app/interfaces/*.js",
    "#controllers/*": "./app/controllers/*.js",
    "#exceptions/*": "./app/exceptions/*.js",
    "#models/*": "./app/models/*.js",
    "#mails/*": "./app/mails/*.js",
    "#services/*": "./app/services/*.js",
    "#listeners/*": "./app/listeners/*.js",
    "#events/*": "./app/events/*.js",
    "#middleware/*": "./app/middleware/*.js",
    "#validators/*": "./app/validators/*.js",
    "#providers/*": "./providers/*.js",
    "#policies/*": "./app/policies/*.js",
    "#abilities/*": "./app/abilities/*.js",
    "#database/*": "./database/*.js",
    "#start/*": "./start/*.js",
    "#tests/*": "./tests/*.js",
    "#config/*": "./config/*.js"
  }
}
